{
  "name": "client",
  "description": "Client fo simple-ci",
  "author": "Eugeny Burnashov <shamcode@gmail.com>",
  "version": "0.0.1",
  "scripts": {
    "start": "node server.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "build": "WEBPACK_ENV=build webpack --progress"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "css-loader": "~0.28.7",
    "eslint": "^5.1.0",
    "eslint-plugin-jest": "^21.18.0",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest": "^23.4.1",
    "jest-runner-eslint": "^0.6.0",
    "node-sass": "^4.5.0",
    "pretty": "^2.0.0",
    "sass-loader": "~6.0.3",
    "sham-ui-jest-preprocessor": "1.0.6",
    "sham-ui-templates": "0.0.18",
    "sham-ui-templates-loader": "^1.0.16",
    "sham-ui-test-helpers": "^1.7.1",
    "style-loader": "~0.19.0",
    "webpack": "~3.10.0",
    "webpack-dev-middleware": "~1.12.0",
    "webpack-hot-middleware": "^2.20.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "codeflask": "^1.1.0",
    "sham-ui": "^1.3.5",
    "sham-ui-router": "^0.0.4"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties",
      "transform-es2015-modules-umd",
      "transform-function-bind",
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "setupFiles": [
          "<rootDir>/jest/globals.js"
        ],
        "transform": {
          "^.+\\.sht$": "sham-ui-jest-preprocessor",
          "^.+\\.js$": "babel-jest"
        },
        "collectCoverageFrom": [
          "src/**/*.js",
          "!src/main.js"
        ],
        "testPathIgnorePatterns": [
          "<rootDir>/node_modules/",
          "<rootDir>/__tests__/integration/helpers.js"
        ],
        "testURL": "http://simple-ci.example.com"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/src/**/*.js",
          "<rootDir>/__tests__/**/*.js",
          "<rootDir>/__mocks__/**/*.js",
          "<rootDir>/jest/**/*.js"
        ]
      }
    ]
  }
}
